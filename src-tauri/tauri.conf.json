{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Vauchi",
  "version": "0.1.0",
  "identifier": "app.vauchi.desktop",
  "build": {
    "frontendDist": "../ui/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "cd ui && npm run dev",
    "beforeBuildCommand": "cd ui && npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Vauchi",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 400,
        "minHeight": 500
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false,
    "icon": [],
    "targets": "all",
    "category": "Productivity",
    "shortDescription": "Privacy-focused contact card exchange",
    "longDescription": "Vauchi is a privacy-focused contact card exchange app. Exchange contact cards securely with QR codes and control what each contact can see."
  }
}
